<% if session[:access_token] %>
  <h1>Power BI</h1>
  <p><%= "Authorization Successful! You are now in Power BI." %> </p>
  <br/>
  <%= link_to "Listing - All reports for me",powerbi_list_all_reports_path %>
  <br/>
  <%= link_to "Open Report - New Window",powerbi_report_path %>
  <br/>
  <%= link_to "Open Report - Embeded",powerbi_embed_report_path %>
  <br/>
  <%= link_to "Listing - Tabular form",powerbi_list_all_report_path %>
<% else %>
  <h1>enter powerbi credentials</h1>
  <%= form_tag powerbi_path do |form| %>
    <div class="field">
      <%= label_tag :email %>
      <%= text_field_tag :email %>
    </div>
    <div class="field">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag "generate token" %>
    </div> 
  <% end %>
<% end %>
